<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wtz.community.dao.UserMapper">   <!--配置为哪个mapper文件-->
        <sql id="selectFields">    <!--代码复用-->
            id, username, password, salt, email, type, status, activation_code, header_url, create_time
        </sql>
        <sql id="insertFields">
            username, password, salt, email, type, status, activation_code, header_url, create_time
        </sql>
        <select id="selectById" resultType="com.wtz.community.entity.User">
            select <include refid="selectFields"></include>
            from user
            where id = #{id}
        </select>
        <select id="selectByName" resultType="com.wtz.community.entity.User">
            select i<include refid="selectFields"></include>
            from user
            where username = #{username}
        </select>
        <select id="selectByEmail" resultType="com.wtz.community.entity.User">
            select <include refid="selectFields"></include>
            from user
            where email = #{email}
        </select>

        <insert id="insertUser" parameterType="User" keyProperty="id">    <!--keyProperty表示主键(自增)对应哪个属性，sql执行后产生id后回填到对象中国-->
            insert into user (<include refid="insertFields"></include>)
            values(#{username}, #{password}, #{salt}, #{email}, #{type}, #{status}, #{activationCode}, #{headerUrl}, #{createTime})
        </insert>

        <update id="updateStatus">
            update user set status = #{status} where id = #{id}
        </update>
        <update id="updateHeaderUrl">
            update user set header_url = #{headerUrl} where id = #{id}
        </update>
        <update id="updatePassword">
            update user set password = #{password} where id = #{id}
        </update>
</mapper>